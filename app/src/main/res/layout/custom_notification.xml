<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outLin"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@color/mBackGround"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/distance2"
            android:layout_marginStart="@dimen/distance2"
            android:layout_toStartOf="@+id/endLin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/darkText"
                android:textSize="@dimen/normalFontSize" />

            <TextView
                android:id="@+id/songNameEr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/normalText"
                android:textSize="@dimen/smallFontSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerPlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/distance"
                android:src="@mipmap/ic_player_home_play" />

            <ImageView
                android:id="@+id/playerNext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/distance"
                android:padding="@dimen/distance"
                android:src="@mipmap/ic_player_home_next" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>